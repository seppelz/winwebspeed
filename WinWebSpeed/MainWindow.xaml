<Window x:Class="WinWebSpeed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinWebSpeed"
        mc:Ignorable="d"
        Title="WinWebSpeed" Height="40" Width="520"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/> <!-- Spacer -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/> <!-- Spacer -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/> <!-- Spacer -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Download Section -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <!-- Text Row: ↓ DL 0.0 Mbit/s -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,2">
                <TextBlock Text="↓" Foreground="White" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Text="DL" Foreground="#CCCCCC" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Name="txtDownload" Text="0.0 Mbit/s" Foreground="White" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
            <!-- Progress Bar -->
            <ProgressBar Name="pbDownload" Height="3" Background="#404040" Foreground="#FFD700" BorderThickness="0" Value="0" Maximum="100"/>
        </StackPanel>

        <!-- Upload Section -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <!-- Text Row: ↑ UL 0.0 Mbit/s -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,2">
                <TextBlock Text="↑" Foreground="White" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Text="UL" Foreground="#CCCCCC" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Name="txtUpload" Text="0.0 Mbit/s" Foreground="White" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
            <!-- Progress Bar -->
            <ProgressBar Name="pbUpload" Height="3" Background="#404040" Foreground="#FFD700" BorderThickness="0" Value="0" Maximum="100"/>
        </StackPanel>

        <!-- CPU Section -->
        <StackPanel Name="spCpu" Grid.Column="4" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,2">
                <TextBlock Text="CPU" Foreground="#CCCCCC" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Name="txtCpu" Text="0%" Foreground="White" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
            <TextBlock Name="txtTopCpu" Text="-" Foreground="#AAAAAA" FontSize="9" TextTrimming="CharacterEllipsis"/>
        </StackPanel>

        <!-- RAM Section -->
        <StackPanel Name="spRam" Grid.Column="6" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,2">
                <TextBlock Text="RAM" Foreground="#CCCCCC" FontWeight="Bold" FontSize="11" Margin="0,0,3,0"/>
                <TextBlock Name="txtRam" Text="0%" Foreground="White" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
            <TextBlock Name="txtTopRam" Text="-" Foreground="#AAAAAA" FontSize="9" TextTrimming="CharacterEllipsis"/>
        </StackPanel>
    </Grid>
</Window>
